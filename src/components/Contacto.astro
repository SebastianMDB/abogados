---
import SectionContainer from "./SectionContainer.astro";
---

<SectionContainer
  id="contacto"
  className="px-5 mb-10 sm:px-10 md:px-20 lg:px-32 xl:px-40"
>
  <h1 class="text-3xl font-bold text-center text-sky-950">Contacto</h1>
  <div class="mt-5 flex justify-center">
    <form action="" class="w-full sm:w-2/3 md:w-1/2 lg:w-1/3 max-w-md">
      <div class="mb-4">
        <label for="Nombre">Nombre:</label>
        <input
          id="Nombre"
          class="bg-zinc-100 rounded-md w-full px-4 py-2"
          type="text"
          placeholder="Nombre"
        />
      </div>
      <div class="mb-4">
        <label for="Telefono">Teléfono:</label>
        <input
          id="Telefono"
          class="bg-zinc-100 rounded-md w-full px-4 py-2"
          type="text"
          placeholder="Teléfono"
        />
      </div>
      <div class="mb-4">
        <label for="Motivo">Motivo de contacto:</label>
        <textarea
          id="Motivo"
          class="bg-zinc-100 rounded-md w-full px-4 py-2"
          rows="5"
          placeholder="Motivo de contacto"></textarea>
      </div>
      <button
        type="submit"
        class="bg-emerald-300 px-4 py-2 rounded-md text-sky-950 hover:bg-emerald-400 w-full"
        >Enviar</button
      >
    </form>
  </div>
</SectionContainer>
