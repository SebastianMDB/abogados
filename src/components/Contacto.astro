---
import SectionContainer from "./SectionContainer.astro";
---

<SectionContainer id="contacto" className="px-20">
  <h1 class="text-3xl font-bold text-center">Contacto</h1>
  <div class="mt-5 flex justify-center">
    <form action="" class="w-1/3 max-w-md">
      <div class="mb-4">
        <input
          class="bg-zinc-100 rounded-md w-full px-4 py-2"
          type="text"
          placeholder="Nombre"
        />
      </div>
      <div class="mb-4">
        <input
          class="bg-zinc-100 rounded-md w-full px-4 py-2"
          type="text"
          placeholder="TelÃ©fono"
        />
      </div>
      <div class="mb-4">
        <textarea
          class="bg-zinc-100 rounded-md w-full px-4 py-2"
          rows="10"
          placeholder="Motivo de contacto"></textarea>
      </div>
      <button
        type="submit"
        class="bg-emerald-300 px-4 py-2 rounded-md text-sky-950 hover:bg-emerald-400"
        >Enviar</button
      >
    </form>
  </div>
